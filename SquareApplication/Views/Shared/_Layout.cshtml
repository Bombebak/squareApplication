<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/css/sass.css")


    @Scripts.Render("~/bundles/modernizr")

</head>
<body>

    <header class="marginBottom150">
        <nav>
            <div class="centerTextInDiv squareBlue  top50left50 fixed">Explore</div>
            <a href="/Home/About"><div class="centerTextInDiv squareBrown top0right50 fixed">About</div></a>
            <a href="/Account/Login"><div class="centerTextInDiv squareOrange top50right0  fixed">Login</div></a>
            <a href="/">
                <div class="centerTextInDiv squareBlue top0left0 fixed">
                    <div class="circleLogo"> </div>
                </div>
            </a>
        </nav>

    </header>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Squares</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/angular")
    @RenderSection("scripts", required: false)
</body>
</html>
