@model SquareApplication.Models.CreateSetViewModel

@{
    ViewBag.Title = "Create set";
}
<style>
    .modal-customized-createSet {
        width: 60vw;
        height: 89vh;
        background-color: #fff;
        -webkit-background-clip: padding-box;
        background-clip: padding-box;
        border: 1px solid #999;
        border: 1px solid rgba(0, 0, 0, .2);
        border-radius: 6px;
        outline: 0;
        -webkit-box-shadow: 0 3px 9px rgba(0, 0, 0, .5);
        box-shadow: 0 3px 9px rgba(0, 0, 0, .5);
        position: absolute;
        top: 5vh;
        left: 20vw;
    }
</style>

<div class="modal-customized-createSet">
    <button id="modalCancelBtn" class="btn btn-primary modal-btn-close">Close</button>
    <div class="modal-header">
        <h4 class="modal-title text-center" id="myModalLabel">Create set</h4>
    </div>
    @using (Html.BeginForm("CreateSet", "Set", FormMethod.Post, new { @enctype = "multipart/form-data" }))
    {

        <div class="modal-body">
            <div class="form-horizontal">
                @Html.ValidationSummary(true)
                @Html.HiddenFor(model => model.UserId)

                <div class="form-group">
                    @Html.LabelFor(model => model.SetTitle, new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(model => model.SetTitle, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.SetTitle)
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.SetPrice, new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(model => model.SetPrice, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.SetPrice)
                    </div>
                </div>

                <div class="col-md-10">
                    @Html.HiddenFor(model => model.Registered)
                    @Html.ValidationMessageFor(model => model.Registered)
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.TagTitle, new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(model => model.TagTitle, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.TagTitle)
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Images, new {@class = "control-label col-md-2"})
                    <div class="col-md-10">
                        @*@Html.TextBoxFor(model => model.Images, new {type = "File", multiple = "true"})*@
                        <input class="form-control" type="file" name="files"
                               multiple="multiple" accept=".jpg, .png" />
                        @Html.ValidationMessageFor(model => model.Images)
                    </div>
                </div>


            </div>

        </div>
        <div class="modal-footer">
            <input type="submit" value="Create" class="btn btn-primary" />
        </div>
    }
</div>
<script src="/Scripts/app/script.js" type="text/javascript"></script>